# yaml-language-server: $schema=schemas/talismanrc.json

# Docs: https://thoughtworks.github.io/talisman/docs/configuring-talisman/ignoring/
threshold: medium
allowed_patterns:
  - "rev: \\w+ # frozen:"
fileignoreconfig:
  - filename: nvim/**/*lazy-lock.json
    ignore_detectors: [filecontent]
version: "1.0"
