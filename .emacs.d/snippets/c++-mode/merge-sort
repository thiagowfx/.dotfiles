# -*- mode: snippet; require-final-newline: nil -*-
# name: merge-sort
# key: merge-sort
# group: icpc
# --
void merge_sort(int *v, int b, int e) {
  int m = b + (e - b) / 2;
  if ( !(m > b))
       return;
  int n = e - b;
  merge_sort(v,b,m);
  merge_sort(v,m,e);
  int *w = new int[n];
  merge(v+b,v+m,v+m,v+e,w);
  for (int i = b; i < e; ++i)
    v[i] = w[i-b];
}
