[DEFAULT]
jobs = 8

[.dotfiles]
checkout = git clone --recurse --jobs=$(nproc) 'git@github.com:thiagowfx/.dotfiles.git' '.dotfiles'

[.dotfiles_corp]
checkout = git clone --recurse --jobs=$(nproc) 'sso://user/tperrotta/dotfiles' '.dotfiles_corp'
chain = true
skip = lazy

[Projects/thiagowfx.github.io]
checkout = git clone --recurse --jobs=$(nproc) 'git@github.com:thiagowfx/thiagowfx.github.io.git' 'thiagowfx.github.io'
skip = lazy

[Projects/aports]
checkout = git clone 'https://gitlab.alpinelinux.org/alpine/aports' 'aports'
skip = lazy

[Projects/PKGBUILDs]
checkout = git clone 'git@github.com:thiagowfx/PKGBUILDs' 'PKGBUILDs'
skip = lazy

