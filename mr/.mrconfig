[.vim]
checkout = git clone --recursive --depth=1 'git@github.com:thiagowfx/vim' '.vim'
update = git pull --recurse-submodules && git submodule update --recursive --remote

[.emacs.d]
checkout = git clone --recursive --depth=1 'git@github.com:thiagowfx/.emacs.d' '.emacs.d'
update = git pull --recurse-submodules && git submodule update --recursive --remote

[.dotfiles]
checkout = git clone --recursive --depth=1 'git@github.com:thiagowfx/dotfiles' '.dotfiles'
update = git pull --recurse-submodules && git submodule update --recursive --remote
