[user]
name = Thiago Perrotta
email = tbperrotta@gmail.com

[credential]
helper = store

[push]
default = simple

[alias]
d = diff --ignore-space-at-eol
p = push
st = status
ignore = "!ignore() { curl -L -s https://www.gitignore.io/api/$@ ;}; ignore"
world = "!world() { git gc; git remote prune origin ;}; world"

[core]
autocrlf = input
editor = vim

[color]
diff = auto
status = auto
branch = auto
grep = auto
interactive = auto
showbranch = auto
ui = auto

[merge]
tool = vimdiff
conflictstyle = diff3

[mergetool]
prompt = false
