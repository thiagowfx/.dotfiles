[user]
	name = Thiago Perrotta
	email = tbperrotta@gmail.com

[credential]
	helper = cache

[push]
	default = simple
	followTags = true

[alias]
	b = branch
	c = commit
	cm = commit -m
	cam = commit -a -m
	cane = commit --amend --no-edit
	d = diff --ignore-space-at-eol
	dc = diff --ignore-space-at-eol --cached
	ignore = "!ignore() { curl -L -s https://www.gitignore.io/api/$@; }; ignore"
	l = log
	p = push
	prune = fetch --prune
	st = status
	stash-all = stash save --include-untracked
	submodule-sync = submodule update --init --recursive
	submodule-update = submodule update --remote --recursive
	undo = reset --soft HEAD^
	world = "!world() { git gc; git remote prune origin; }; world"

[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore_global

[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto
	interactive = auto
	showbranch = auto
	ui = auto

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = true
	keepBackup = false

[difftool]
	prompt = true

[submodule]
	fetchJobs = 0

[interactive]
	diffFilter = diff-highlight

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[help]
	autocorrect = 1

[status]
	showUntrackedFiles = all
