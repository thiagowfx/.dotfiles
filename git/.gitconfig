[user]
	name = Thiago Perrotta
	email = tbperrotta@gmail.com

[credential]
	helper = store

[push]
	default = simple
	followTags = true

[alias]
	b = branch
	c = commit
	cam = commit -a -m
	d = diff --ignore-space-at-eol
	dc = diff --ignore-space-at-eol --cached
	ignore = "!ignore() { curl -L -s https://www.gitignore.io/api/$@; }; ignore"
	l = log
	logg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	p = push
	prune = fetch --prune
	st = status
	stash-all = stash save --include-untracked
	undo = reset --soft HEAD^
	world = "!world() { git gc; git remote prune origin; }; world"

[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore_global

[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto
	interactive = auto
	showbranch = auto
	ui = auto

[merge]
	ff = only
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = true
	keepBackup = false

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[diff]
	compactionHeuristic = 1
	tool = opendiff

[difftool]
	prompt = false

[difftool "icdiff"]
	cmd = icdiff --line-numbers \"$LOCAL\" \"$REMOTE\"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[submodule]
	fetchJobs = 0

[interactive]
	diffFilter = diff-highlight

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[help]
	autocorrect = 1

[status]
	showUntrackedFiles = all

[transfer]
	fsckobjects = true
