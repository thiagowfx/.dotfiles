[user]
	name = Thiago Perrotta
	email = tbperrotta@gmail.com

[credential]
	helper = store

[push]
	default = simple

[alias]
	d = diff --ignore-space-at-eol
	l = log
	p = push
	st = status
	ignore = "!ignore() { curl -L -s https://www.gitignore.io/api/$@; }; ignore"
	world = "!world() { git gc; git remote prune origin; }; world"

[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore_global

[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto
	interactive = auto
	showbranch = auto
	ui = auto

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = true

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[submodule]
	fetchJobs = 0 # see https://github.com/blog/2188-git-2-9-has-been-released

[diff]
	compactionHeuristic = 1 # see https://github.com/blog/2188-git-2-9-has-been-released
