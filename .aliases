## distro specific commands
if [[ -f /etc/arch-release  ]] || [[ -f /etc/manjaro-release ]]; then
    alias world="sudo pacman -Syy && sudo pacman -Syu"
    alias worldworld="sudo pacman -Syy && sudo pacman -Syu && sudo pacman-optimize && yaourt -Sbu --aur"
elif
    [[ -f /etc/debian-release ]] || [[ -f /etc/ubuntu-release ]]; then
    alias world="sudo apt-get -y update && sudo apt-get -y upgrade"
    alias worldworld="sudo apt-get -y update && sudo apt-get -y upgrade && sudo apt-get -y dist-upgrade && sudo apt-get -y autoclean && sudo apt-get -y autoremove"
elif
    [[ -f /etc/fedora-release ]]; then
    alias world="sudo yum -y update && sudo yum -y upgrade"
    alias worldworld="sudo yum -y update && sudo yum -y upgrade && sudo yum -y autoremove && sudo yum -y clean all"
elif
    [[ -f /etc/suse-release ]]; then
    alias world="sudo zypper -n update && sudo zypper -n upgrade && sudo -n zypper dup"
fi

# control history
export HISTSIZE=10000
export HISTFILESIZE=$HISTSIZE
export HISTFILE="$HOME/.history"
export HISTCONTROL=ignoreboth
export SAVEHIST=$HISTSIZE

export PATH="/opt:$PATH"
export BROWSER="/usr/bin/firefox"
export EDITOR="emacs -nw"
export VISUAL="emacs"
export PAGER="less"
