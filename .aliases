# -*- shell-script -*-
# This is intended as a complement to oh-my-zsh framework.

# caution / verbose / human-readable / color
alias cp="cp -v -i"
alias ln="ln -v"
alias mv="mv -v -i"
alias rm="rm -v -i"
alias rmdir="rmdir -v"
alias chmod="chmod -v"
alias chown="chown -v"
alias df='df -h'
alias du="du -h"
alias free="free -m"
alias grep="grep --color=auto -E -d skip"
alias pgrep="pgrep --list-name"
alias cower="cower --color=always --sort=votes"

# aliases
alias emq="emacs -nw"
alias pingg="ping google.com"

# templates
alias xephyr-template="Xephyr -ac -br -noreset -screen 800x600 :1"
alias wget-template-basic="wget -e robots=off -mpEkK -np -t inf -T 60 --"
alias wget-template-pdf="wget -e robots=off -A pdf -mpEkK -np -t inf -T 60 --"
alias wget-template-spider="wget -e robots=off --wait=2 --random-wait --recursive --span-hosts --spider --timestamping --tries=5 --dns-timeout=30 --connect-timeout=5 --read-timeout=5 --level=10 --"
alias mount-template-iso="mount -o loop"
alias youtube-dl-template-mp3="youtube-dl -t --restrict-filenames --extract-audio --audio-format mp3"
alias youtube-dl-template-flv="youtube-dl -t --restrict-filenames"
alias fluxbox-generate_menu-template="fluxbox-generate_menu -kg -su -t mate-terminal -w www.google.com -is -ds"
alias mmaker-template="mmaker -t Konsole -vf openbox3"
alias trayer-template="trayer --edge top --align right --widthtype request --SetDockType false"

# distro upgrade
if [[ -f /etc/arch-release  ]] || [[ -f /etc/manjaro-release ]]; then
    alias world="sudo pacman -Syyuu"
    alias iogurte="yaourt -Syu --devel --aur"
elif
    [[ -f /etc/debian-release ]] || [[ -f /etc/ubuntu-release ]]; then
    alias world="sudo aptitude -y update && sudo aptitude -y upgrade && sudo apt-get -y dist-upgrade && sudo apt-get -y autoremove"
elif
    [[ -f /etc/fedora-release ]]; then
    alias world="sudo yum -y update && sudo yum -y upgrade && sudo yum -y autoremove"
elif
    [[ -f /etc/suse-release ]]; then
    alias world="sudo zypper -n update && sudo zypper -n upgrade && sudo -n zypper dup"
fi

# export variables
export BROWSER="/usr/bin/firefox"
export EDITOR="emacs -nw"
export VISUAL="emacs"
export PAGER="less"
export PYTHONDOCS=/usr/share/doc/python2/html/

# arch-chroot like
function changeroot {
    sudo cp -L /etc/resolv.conf $1/etc/resolv.conf
    sudo mount -t proc proc $1/proc
    sudo mount -t sysfs sys $1/sys
    sudo mount -o bind /dev $1/dev
    sudo mount -t devpts pts $1/dev/pts/
    sudo chroot $1/ /bin/bash
}
