#!/bin/sh

# necessary to make chrome pick up the proxy settings stored in gconf
export DESKTOP_SESSION=gnome

# for java applications
export _JAVA_AWT_WM_NONREPARENTING=1

# set x11 cursor
xsetroot -cursor_name left_ptr &

# set wallpaper
feh --bg-scale ~/.wallpaper &

# swap left win and left alt (conditional on the physical keyboard)
setxkbmap -option altwin:swap_alt_win us &

# update Xresources
xrdb -merge ~/.Xresources &

# start i3 window manager without autostarting apps
exec /usr/bin/i3 -a

# vim: ft=sh
