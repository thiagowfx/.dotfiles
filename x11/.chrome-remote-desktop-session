#!/bin/sh

# necessary to make chrome pick up the proxy settings stored in gconf
export DESKTOP_SESSION=gnome

# for java applications
export _JAVA_AWT_WM_NONREPARENTING=1

# set wallpaper
[[ -f ~/.wallpaper ]] && hash feh &>/dev/null && feh --bg-scale ~/.wallpaper &

# swap left win and left alt
hash setxkbmap &>/dev/null && setxkbmap -option altwin:swap_alt_win us &

# start i3 window manager without autostarting apps
exec /usr/bin/i3 -a

# vim: ft=sh
