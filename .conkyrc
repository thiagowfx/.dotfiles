#############################################################################################
# A simple, lightweight .conkyrc.							    #
# This conky has been originally forked from the default one that comes with ArchBang Linux #
# 											    #
# References:										    #
# - http://conky.sourceforge.net/conkyrc-vert						    #
# - http://conky.sourceforge.net/variables.html						    #
# - conky man page									    #
#############################################################################################

background yes
# better fonts
use_xft yes
xftfont monospace:size=9
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent no
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
double_buffer yes
minimum_size 1 1
maximum_width 250
draw_shades no
draw_outline no
draw_borders yes
draw_graph_borders yes
default_color gray
default_shade_color 000000
default_outline_color d9d7d6
alignment mr 	      # alt: alignment middle_right
# span
gap_x 12
gap_y 12
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes
color1 red
color2 gray

##############################################
#  Output                                    #
##############################################
TEXT
${font sans-serif:bold:size=8}OVERVIEW ${hr 2}
${font sans-serif:normal:size=8}BAT:$alignr${battery_short BAT1} - ${battery_time BAT1}
${battery_bar BAT1}
CPUs: $alignr${cpu cpu0}% | ${cpu cpu1}%
${cpubar 5,80 cpu0}$alignr${cpubar 5,80 cpu1}
RAM: $alignr$mem/$memmax
$membar
SWAP: $alignr$swap/$swapmax
$swapbar
DISK:$alignr${diskio /dev/sda}
${diskiograph /dev/sda}
/   ${fs_bar 5,50 /}$alignr${fs_used /}/${fs_size /}
/home $alignr${fs_used /home}/${fs_size /home}

${font sans-serif:bold:size=8}MISC ${hr 2}
${font sans-serif:normal:size=8}ACPI:$alignr$acpitemp ÂºC
Processes:$alignr$processes
Running:$alignr$running_processes

${font sans-serif:bold:size=8}NETWORK ${hr 2}
${font sans-serif:normal:size=8}IP Address:$alignr${addr wlp4s0}
AP:$alignr${wireless_essid wlp4s0}
Link: ${wireless_link_bar 5,90 wlp4s0} $alignr ${wireless_link_qual wlp4s0}/${wireless_link_qual_max wlp4s0}
Total D/U:$alignr${totaldown wlp4s0} / ${totalup wlp4s0}
Down speed:$alignr${downspeedf wlp4s0} kB/s
${downspeedgraph wlp4s0}
Up speed:$alignr${upspeedf wlp4s0} kB/s
${upspeedgraph wlp4s0}

${font sans-serif:bold:size=8}SYSTEM ${hr 2}
${font sans-serif:normal:size=8}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

${font sans-serif:bold:size=8}TOP RAM${hr 2}
${font sans-serif:normal:size=8}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
${top_mem name 3}${alignr}${top mem 3} %
${top_mem name 4}${alignr}${top mem 4} %
${top_mem name 5}${alignr}${top mem 5} %

${font sans-serif:bold:size=8}TOP CPU${hr 2}
${font sans-serif:normal:size=8}${top name 1}${alignr}${top cpu 1} %
${top name 2}${alignr}${top cpu 2} %
${top name 3}${alignr}${top cpu 3} %
${top name 4}${alignr}${top cpu 4} %
${top name 5}${alignr}${top cpu 5} %
