# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $Alt Mod1
set $Win Mod4
set $mod Mod4
set $i3lock i3lock-wrapper
floating_modifier $mod
font pango:Terminus 9.0

bindsym $mod+Return       exec --no-startup-id i3-sensible-terminal
bindsym $mod+Shift+Return exec --no-startup-id "/usr/bin/emacsclient -c"
bindsym $mod+d            exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Shift+d      exec --no-startup-id dmenu_run
bindsym $mod+Escape       exec --no-startup-id i3-sensible-terminal -e "/usr/bin/htop"
bindsym $mod+Shift+Escape exec --no-startup-id i3-sensible-terminal -e "/usr/bin/alsamixer"

bindsym $mod+Shift+q kill
bindsym $Alt+F4      kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+x layout toggle all

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+b focus child

# assign: use xorg-xprop to learn the class string
assign [class="^Chromium$|Firefox|dwb"] 2

bindsym $mod+o       move workspace to output HDMI1
bindsym $mod+Shift+o move workspace to output LVDS1
workspace 1 output LVDS1
workspace 9 output HDMI1

# rename workspaces
bindsym $mod+z exec i3-input -F 'rename workspace to "%s"' -P 'New name for workspace: ' 

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 0
bindsym $mod+p workspace prev
bindsym $mod+n workspace next

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 0

mode "resize" {
  set $step 10
  bindsym Left resize shrink width $step px or $step ppt
  bindsym Down resize grow height $step px or $step ppt
  bindsym Up resize shrink height $step px or $step ppt
  bindsym Right resize grow width $step px or $step ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $mode_system (l)ock, (e)logout, (s)uspend, (h)ibernate, (r)eboot, Shift+(s)hutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id $i3lock, mode "default"
  bindsym e exec --no-startup-id i3-msg exit
  bindsym s exec --no-startup-id $i3lock && systemctl suspend, mode "default"
  bindsym h exec --no-startup-id systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot
  bindsym Shift+s exec --no-startup-id systemctl poweroff
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+l mode "$mode_system"

bar {
    # status_command i3status
    status_command i3blocks
    position top
    mode dock
}

# Custom hotkeys: use xev to learn the hotkey names
bindsym Print                      exec /usr/bin/scrot '%Y-%m-%d_%H%M%S_$wx$h_scrot.png' -e 'mv $f ~/ramdisk/' && notify-send 'SS taken'
bindsym XF86MonBrightnessUp        exec /usr/bin/xbacklight -inc 5 -time 0
bindsym XF86MonBrightnessDown      exec /usr/bin/xbacklight -dec 5 -time 0
bindsym XF86AudioLowerVolume       exec /usr/bin/amixer set Master 3%- unmute && killall -SIGUSR1 i3blocks
bindsym XF86AudioRaiseVolume       exec /usr/bin/amixer set Master 3%+ unmute && killall -SIGUSR1 i3blocks
bindsym XF86AudioMute              exec /usr/bin/amixer set Master toggle     && killall -SIGUSR1 i3blocks
bindsym Shift+XF86AudioLowerVolume exec /usr/bin/mpc prev
bindsym Shift+XF86AudioRaiseVolume exec /usr/bin/mpc next
bindsym Shift+XF86AudioMute        exec /usr/bin/mpc toggle
bindsym XF86AudioPrev              exec /usr/bin/mpc prev
bindsym XF86AudioNext              exec /usr/bin/mpc next
bindsym XF86AudioPlay              exec /usr/bin/mpc toggle

# scratchpad
bindsym $mod+m       move scratchpad
bindsym $mod+Shift+m scratchpad show

# options tweaking
default_orientation            auto
workspace_auto_back_and_forth  no
workspace_layout               default # default|stacking|tabbed

# for_window
for_window [window_role="pop-up"] floating enable, move absolute center
for_window [class="^Chromium$|Firefox|dwb|^Emacs$|Zathura|URxvt|Calibre"] border 1pixel
for_window [class="Arandr|Epsxe|feh|Galculator|gimp|Java|Lxappearance|MPlayer|Viewnior|qtRaytracer"] floating enable

# i3 startup
exec --no-startup-id "/usr/bin/autocutsel -fork"
exec --no-startup-id "/usr/bin/autocutsel -selection PRIMARY -fork"
exec --no-startup-id "/usr/bin/autocutsel -selection SECONDARY -fork"
exec --no-startup-id "/usr/bin/compton -b"
exec --no-startup-id /usr/bin/CopyAgent
exec --no-startup-id /usr/bin/dropboxd
exec --no-startup-id /usr/bin/dunst
exec --no-startup-id "/usr/bin/emacs --daemon"
exec --no-startup-id "/usr/bin/hsetroot -solid '#111019'"
exec --no-startup-id /usr/bin/mpd
exec --no-startup-id /usr/bin/mpdas -d
exec --no-startup-id /usr/bin/nm-applet
exec --no-startup-id /usr/bin/parcellite
exec --no-startup-id /usr/bin/redshift
exec --no-startup-id "/usr/bin/thunar --daemon"
exec --no-startup-id "/usr/bin/udiskie --tray"
