# -*- sh -*-

autoload -U zutil
autoload -U compinit && compinit
autoload -U bashcompinit && bashcompinit
autoload -U complist
autoload -U promptinit && promptinit
autoload -U colors && colors
alias -s txt=emacs
alias -g gi='| grep -i'
setopt appendhistory autocd beep emacs extendedglob nomatch hist_ignore_space hist_ignore_all_dups
[[ -f ~/.aliases ]] && . ~/.aliases

# enable zsh syntax highlightning
[[ -f /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]] && . /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern)

