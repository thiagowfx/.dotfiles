XF86AudioPause
    playerctl play-pause && pkill -RTMIN+2 '^i3blocks'

XF86AudioPlay
    playerctl play-pause && pkill -RTMIN+2 '^i3blocks'

XF86AudioStop
    playerctl stop && pkill -RTMIN+2 '^i3blocks'

XF86AudioPrev
    playerctl previous && pkill -RTMIN+2 '^i3blocks'

XF86AudioNext
    playerctl next && pkill -RTMIN+2 '^i3blocks'

XF86AudioMute
    pulseaudio-ctl mute && pkill -RTMIN+1 '^i3blocks'

XF86AudioRaiseVolume
    pulseaudio-ctl up && pkill -RTMIN+1 '^i3blocks'

XF86AudioLowerVolume
    pulseaudio-ctl down && pkill -RTMIN+1 '^i3blocks'

Print
    scrot '%F_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Pictures' && notify-send 'Took a screenshot'
