{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "permissions": {
    "allow": [
      "Bash(ansible-doc:*)",
      "Bash(cat:*)",
      "Bash(command -v:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr review-comment list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run view:*)",
      "Bash(git log:*)",
      "Bash(git rev-parse:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(hadolint:*)",
      "Bash(helm template:*)",
      "Bash(just --list:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(readlink:*)",
      "Bash(rg:*)",
      "Bash(terrascan scan:*)",
      "Bash(test:*)",
      "Bash(wc:*)",
      "Bash(yamllint:*)",
      "Fetch(https://perrotta.dev/*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "alwaysThinkingEnabled": true
}
