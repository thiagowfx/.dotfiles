{
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-dangerous-commands.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "command": "afplay /System/Library/Sounds/Glass.aiff &",
            "type": "command"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(ansible-doc:*)",
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(command -v:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr review-comment list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run view:*)",
      "Bash(git check-ignore:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(hadolint:*)",
      "Bash(helm lint:*)",
      "Bash(helm template:*)",
      "Bash(just --list:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(md5sum:*)",
      "Bash(mkdir:*)",
      "Bash(pytest:*)",
      "Bash(readlink:*)",
      "Bash(rg:*)",
      "Bash(shellcheck:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tflint:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(yamllint:*)",
      "Fetch(https://perrotta.dev/*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)"
    ]
  },
  "statusLine": {
    "command": "bash ~/.claude/statusline.sh",
    "type": "command"
  }
}
