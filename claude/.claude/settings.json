{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(acli jira workitem view:*)",
      "Bash(ansible-doc:*)",
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(command -v:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr review-comment list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git rev-parse:*)",
      "Bash(git run list:*)",
      "Bash(git show:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(hadolint:*)",
      "Bash(helm lint:*)",
      "Bash(helm template:*)",
      "Bash(just --list:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(md5sum:*)",
      "Bash(mkdir:*)",
      "Bash(pytest:*)",
      "Bash(readlink:*)",
      "Bash(rg:*)",
      "Bash(shellcheck:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tflint:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(yamllint:*)",
      "Fetch(https://docs.github.com/*)",
      "Fetch(https://perrotta.dev/*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block_dangerous_commands.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
