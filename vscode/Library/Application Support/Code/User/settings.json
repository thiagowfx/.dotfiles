{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.fontFamily": "CommitMono, IBM Plex Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnType": true,
    "editor.inlineSuggest.enabled": true,
    "editor.linkedEditing": true,
    "editor.minimap.autohide": "scroll",
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        80
    ],
    "editor.stickyScroll.enabled": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": false,
    "git.mergeEditor": false,
    "git.openDiffOnClick": false,
    "git.openRepositoryInParentFolders": "never",
    "gitlens.fileAnnotations.command": "changes",
    "gitlens.launchpad.indicator.enabled": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.views.commitDetails.files.layout": "tree",
    "terminal.external.osxExec": "Ghostty.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "Hermit, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.hideOnStartup": "never",
    "terminal.integrated.inheritEnv": false, // https://code.visualstudio.com/docs/terminal/profiles
    "terminal.integrated.middleClickBehavior": "paste",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.showExitAlert": false, // https://github.com/microsoft/vscode/issues/106555
    "terminal.integrated.suggest.enabled": false,
    "update.showReleaseNotes": false,
    "window.commandCenter": true,
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "expand",
    "workbench.editor.focusRecentEditorAfterClose": false,
    "workbench.editor.splitSizing": "auto",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.secondarySideBar.showLabels": false,
    "workbench.settings.editor": "json", // https://stackoverflow.com/questions/65908987/how-can-i-open-visual-studio-codes-settings-json-file
    "workbench.startupEditor": "none",
}
