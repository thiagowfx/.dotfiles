#!/bin/sh

export TERMINAL="terminator"

[[ -f "/home/thiago/.fehbg" ]] && sh "/home/thiago/.fehbg" &

# Redshift
which redshift &>/dev/null && redshift -l -23:-43 &

# Network manager.
which nm-applet &>/dev/null && nm-applet &

# Clipboard manager.
which clipit &>/dev/null && clipit &

# No touchpad clicking while typing.
which syndaemon &>/dev/null && syndaemon -i 1 -t -k -d &

# Hide the mouse when idle.
which unclutter &>/dev/null && unclutter &
