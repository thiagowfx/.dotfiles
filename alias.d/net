# simple HTTP web server for files in current directory
_httpserver() {
    python2 -m SimpleHTTPServer "${1:-7777}"
}
addtemplate httpserver python2

# get public IP address
_ip() {
    dig +short myip.opendns.com @resolver1.opendns.com
}
addtemplate ip dig

# ping google.com
_pingg() {
    ping "${1:-google.com}"
}
addtemplate pingg ping
