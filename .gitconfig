# -*- conf -*-

[push]
default = tracking

[user]
name = Thiago Perrotta
email = thiagoperrotta95@gmail.com

[credential]
helper = store # store|cache --timeout=7200

[alias]
logg = log --graph --decorate --pretty=oneline --abbrev-commit --all
logh = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
logr = log --graph --oneline --decorate
lz = commit -a -m "update"
st = status
puhs = push

[core]
whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
ui = auto

[rerere]
enabled = true
