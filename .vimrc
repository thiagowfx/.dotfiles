set nocompatible

set tabstop=4
set softtabstop=4
set shiftwidth=4
set number
set mouse=a
set showmatch
let mapleader=","
let g:mapleader=","

nmap <leader>w :w!

set ttyfast

filetype on
filetype plugin on
filetype indent on
set smartindent

set nohlsearch
set incsearch

set visualbell
set noerrorbells
syntax enable

set expandtab

set title
set titlelen=79
set autoread
set sw=4

set nomodeline
set bg=dark

hi LineNr guifg=green ctermfg=lightGreen

