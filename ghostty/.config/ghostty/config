# https://ghostty.org/docs/config
#   Edit config: Cmd + ,
#   Reload config: Cmd + Shift + ,
#   Config defaults with docs: ghostty +show-config --default --docs
#
# https://ghostty.org/docs/config/keybind
#   ghostty +list-keybinds --default

# keep-sorted start
background-opacity = 0.95
clipboard-trim-trailing-spaces = true
cursor-style-blink = false
custom-shader = shaders/cursor_tail.glsl
# native: Cmd + Shift + d
keybind = cmd+shift+-=new_split:down
# native: Cmd + d
keybind = cmd+shift+|=new_split:right
keybind = ctrl+shift+down=jump_to_prompt:1
keybind = ctrl+shift+up=jump_to_prompt:-1
keybind = global:cmd+;=toggle_quick_terminal
keybind = global:cmd+shift+;=toggle_quick_terminal
keybind = shift+enter=text:\n
macos-icon = chalkboard
mouse-hide-while-typing = true
shell-integration-features = no-cursor
theme = Gruvbox Dark
window-new-tab-position = end
# keep-sorted end
