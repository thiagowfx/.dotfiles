general {
	interval = 5
}

order += "load"
order += "path_exists tailscale"
order += "wireless _first_"
order += "tztime local"

load {
	format = "%5min"
}

path_exists tailscale {
	path = "/proc/sys/net/ipv4/conf/tailscale0"
}

wireless _first_ {
	format_up = "%essid %ip"
	format_down = "wifi down"
}

tztime local {
	format = "%Y-%m-%d %H:%M"
}
