general {
	colors = true
	interval = 5
}

order += "memory"
order += "load"
order += "wireless _first_"
order += "tztime local"

memory {
	format = "%used"
	threshold_degraded = "15%"
}

load {
	format = "%1min"
}

wireless _first_ {
	format_up = "%essid %ip"
	format_down = "wifi down"
}

tztime local {
	format = "%Y-%m-%d %H:%M"
}
