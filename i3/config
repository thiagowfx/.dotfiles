# focus_follows_mouse no
hide_edge_borders vertical
# floating_maximum_size 1024 x 768
workspace_auto_back_and_forth yes

# switch to next workspace
bindsym $mod+n workspace next

# switch to previous workspace
bindsym $mod+Shift+n workspace prev
bindsym $mod+p workspace prev

bindsym $mod+apostrophe exec --no-startup-id quickswitch.py
bindsym $mod+Tab exec --no-startup-id quickswitch.py
bindsym $Alt+Tab exec --no-startup-id quickswitch.py

